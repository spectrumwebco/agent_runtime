{{#http}}
# HTTP server configuration
server {
    listen {{#http_port}}{{.}}{{/http_port}}{{^http_port}}80{{/http_port}};
    {{#server_name}}
    server_name {{.}};
    {{/server_name}}
    {{^server_name}}
    server_name localhost;
    {{/server_name}}

    {{#redirect_to_https}}
    # Redirect all HTTP requests to HTTPS
    return 301 https://$host$request_uri;
    {{/redirect_to_https}}
    {{^redirect_to_https}}
    {{#root_dir}}
    # Root directory for static files
    root {{.}};
    {{/root_dir}}
    {{^root_dir}}
    root /usr/share/nginx/html;
    {{/root_dir}}

    {{#index}}
    index {{.}};
    {{/index}}
    {{^index}}
    index index.html index.htm;
    {{/index}}

    {{#charset}}
    charset {{.}};
    {{/charset}}
    {{^charset}}
    charset utf-8;
    {{/charset}}

    # Logging configuration
    {{#access_log}}
    access_log {{.}};
    {{/access_log}}
    {{^access_log}}
    access_log /var/log/nginx/{{project_name}}_access.log;
    {{/access_log}}
    {{#error_log}}
    error_log {{.}};
    {{/error_log}}
    {{^error_log}}
    error_log /var/log/nginx/{{project_name}}_error.log;
    {{/error_log}}

    # Gzip compression
    {{#gzip}}
    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_min_length 256;
    gzip_types
        application/atom+xml
        application/javascript
        application/json
        application/ld+json
        application/manifest+json
        application/rss+xml
        application/vnd.geo+json
        application/vnd.ms-fontobject
        application/x-font-ttf
        application/x-web-app-manifest+json
        application/xhtml+xml
        application/xml
        font/opentype
        image/bmp
        image/svg+xml
        image/x-icon
        text/cache-manifest
        text/css
        text/plain
        text/vcard
        text/vnd.rim.location.xloc
        text/vtt
        text/x-component
        text/x-cross-domain-policy;
    {{/gzip}}

    {{#client_max_body_size}}
    # Maximum client body size
    client_max_body_size {{.}};
    {{/client_max_body_size}}
    {{^client_max_body_size}}
    client_max_body_size 10M;
    {{/client_max_body_size}}

    {{#static_assets}}
    # Static assets
    location {{path}} {
        {{#alias}}
        alias {{.}};
        {{/alias}}
        {{^alias}}
        root {{root}};
        {{/alias}}
        {{#expires}}
        expires {{.}};
        {{/expires}}
        {{^expires}}
        expires 7d;
        {{/expires}}
        add_header Cache-Control "public";
    }
    {{/static_assets}}

    {{#spa}}
    # Single page application configuration
    location / {
        try_files $uri $uri/ /index.html;
    }
    {{/spa}}

    {{#api_proxy}}
    # API proxy configuration
    location {{path}} {
        proxy_pass {{target}};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        {{#timeout}}
        proxy_connect_timeout {{.}};
        proxy_send_timeout {{.}};
        proxy_read_timeout {{.}};
        {{/timeout}}
    }
    {{/api_proxy}}

    {{#custom_locations}}
    # Custom location configuration
    location {{path}} {
        {{directives}}
    }
    {{/custom_locations}}

    {{#error_pages}}
    # Custom error pages
    error_page {{code}} {{page}};
    {{/error_pages}}
    {{^error_pages}}
    # Default error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    {{/error_pages}}
    {{/redirect_to_https}}
}
